<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ReleaseInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape"
                app:srcCompat="@drawable/abc_vector_test" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="293dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Blue Protocol release info"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Blue Protocol is scheduled to release in Japan by the end of 2021, while there's no official release date given out, the game certainly won't be releasing in the West this year for sure.The game is expected to release in other regions in mid 2022.You can check classes and their stats which were recorded in Closed Beta. "
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>